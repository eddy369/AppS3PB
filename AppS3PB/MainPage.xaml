<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppS3PB.MainPage">

    <StackLayout>
        <Frame BackgroundColor="Beige" Padding="24" CornerRadius="0">
            <Label Text="Welcome to Xamarin.Forms!" HorizontalTextAlignment="Center" TextColor="Black" FontSize="18"/>
        </Frame>

        <Entry x:Name="txtUsuario" Placeholder="Ingrese el Usuario"/>
        <Entry x:Name="txtContrasena" Placeholder="Ingrese la contrasena" IsPassword="True"/>
        <Button x:Name="btnAbrir" Text="Abrir ventana 2" Clicked="btnAbrir_Clicked"/>

    </StackLayout>

</ContentPage>
